{
  "manifest_version": 3,
  "name": "Auris",
  "version": "1.0.0",
  "description": "Advanced audio equalizer with 8D audio, echo effects, volume boost, bass boost, and surround sound controls",
  "permissions": ["activeTab", "storage", "tabCapture", "offscreen"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/auris-icon-light-svg-16.png",
    "24": "icons/auris-icon-light-svg-24.png",
    "32": "icons/auris-icon-light-svg-32.png",
    "48": "icons/auris-icon-light-svg-48.png",
    "128": "icons/auris-icon-light-svg-128.png"
  },
  "background": {
    "service_worker": "scripts/background/serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [],
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "Auris",
    "default_icon": {
      "16": "icons/auris-icon-light-svg-16.png",
      "24": "icons/auris-icon-light-svg-24.png",
      "32": "icons/auris-icon-light-svg-32.png"
    }
  }
}
